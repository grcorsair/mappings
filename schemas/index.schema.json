{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://grcorsair.com/schemas/mappings-index.json",
  "title": "Corsair Mapping Pack Index",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "tool",
      "version",
      "description",
      "frameworks",
      "mappingIds",
      "packUrl",
      "sha256",
      "signer",
      "source",
      "publicKeyUrl",
      "createdAt"
    ],
    "properties": {
      "id": { "type": "string", "minLength": 1 },
      "tool": { "type": "string", "minLength": 1 },
      "version": { "type": "string", "minLength": 1 },
      "description": { "type": "string", "minLength": 1 },
      "frameworks": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "minItems": 1
      },
      "mappingIds": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "minItems": 1
      },
      "packUrl": { "type": "string", "format": "uri" },
      "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
      "signer": { "type": "string", "minLength": 1 },
      "source": { "type": "string", "enum": ["vendor", "community", "internal"] },
      "publicKeyUrl": { "type": "string", "format": "uri" },
      "createdAt": { "type": "string", "format": "date" }
    }
  }
}
